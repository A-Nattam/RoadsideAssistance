<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yokgoodchild.roadsideassistance.RateServiceScore.ScanQRCodeRateServiceScoreActivity">

    <include
        android:id="@+id/main_rate_service_score_toolbar"
        layout="@layout/toolbar_back"/>

    <LinearLayout
        android:id="@+id/main_rate_service_score_linear001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_rate_service_score_toolbar">

        <SurfaceView
            android:id="@+id/main_rate_service_score_cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_rate_service_score_toolbar">

        <TextView
            android:id="@+id/main_rate_service_score_txt_Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please focus camera to QR Code"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/main_rate_service_score_btn_cancel"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/main_rate_service_score_btn_option"
            android:text="Option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>
    </RelativeLayout>

</RelativeLayout>
