<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yokgoodchild.roadsideassistance.ViewReply.ViewReplyActivity">

    <include
        android:id="@+id/view_reply_toolbar"
        layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/view_reply_toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <RadioButton
                android:id="@+id/view_reply_radio001"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:text="รายการที่ได้การตอบรับ"
                android:textSize="15dp"
                android:buttonTint="@color/colorText"/>

            <RadioButton
                android:id="@+id/view_reply_radio002"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="รายการซ่อมเสร็จ"
                android:textSize="15dp"
                android:buttonTint="@color/colorText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/view_reply_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/show_viewreply_frragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </RelativeLayout>

</RelativeLayout>
