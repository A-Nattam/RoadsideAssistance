<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHead"
    android:padding="10dp">

    <Button
        android:id="@+id/toolbar_menu_user_btn_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_menu_person"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/toolbar_menu_user_txt_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/toolbar_menu_user_btn_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_menu_list"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>